{
  "name": "contao-bundle-skeleton",
  "type": "contao-bundle",
  "version": "1.0.0",
  "description": "",
  "license": "",
  "authors": [
    {
      "name": "Max Staack",
      "email": "staack@nerdlichter.com",
      "homepage": "https://www.nerdlichter.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=7.1",
    "contao/core-bundle": "^4.4"
  },
  "require-dev": {
    "contao/manager-plugin": "^2.0",
    "phpunit/phpunit": "^6.0"
  },
  "conflict": {
    "contao/manager-plugin": "<2.0 || >=3.0"
  },
  "autoload": {
    "psr-4": {
      "Nerdlichter\\DemoBundle\\": "src/"
    },
    "classmap": [
      "src/Resources/contao/"
    ],
    "exclude-from-classmap": [
      "src/Resources/contao/config/",
      "src/Resources/contao/dca/",
      "src/Resources/contao/languages/",
      "src/Resources/contao/templates/"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Nerdlichter\\DemoBundle\\Tests\\": "tests/"
    }
  },
  "extra": {
    "contao-manager-plugin": "Nerdlichter\\DemoBundle\\ContaoManager\\Plugin"
  },
  "config": {
    "sort-packages": true
  }
}
